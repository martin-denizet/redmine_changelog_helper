<%
  @machines = machines
  @types = types
  @subtypes = subtypes
  @importances = importances
%>
<% if @page and @page.is_changelog? %>
    <script type="text/javascript">
      <%= render partial: 'redmine_changelog_helper/custom_display', formats: 'js' %>
    </script>
    <style type="text/css">
      .changelog-lines-container, h4.version-date {
        margin-left: 20px;
      }

      #content h1, h2, h4 {
        color: #000;
      }
      h4.lines-group-header{
        padding-top: 3em;
      }

      .type-importance-badge {
        float: right;
        color: #555;
              }

        hr{
          margin: 20px 0;
        }
    </style>
<% end %>
<%= render partial: 'redmine_changelog_helper/wiki_edit_form' %>
<% if @page and @page.is_changelog? and controller_name == 'wiki' and action_name == 'edit' %>
    <script type="text/javascript">
      <%= render partial: 'redmine_changelog_helper/custom_editor', formats: 'js' %>
    </script>
    <%= render partial: 'redmine_changelog_helper/custom_editor_forms' %>
<% end %>

